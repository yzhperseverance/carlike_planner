<?xml version="1.0" encoding="utf-8"?>

<robot name="racebot" xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:property name="M_PI" value="3.1415926"/>
    <!-- Tire rotational resistance: rotation_fiction -->
    <xacro:property name="rotation_fiction" value="1"/>
    <!-- Tire grip: mu-->
    <xacro:property name="mu" value="9999999999.0"/>
    <xacro:property name="r_wheel" value="0.05"/>
    <xacro:property name="l_wheel" value="0.03"/>

    <xacro:include filename="$(find carsim)/urdf/macros.xacro" />

    <link name="base_footprint" />

<!-- STL model -->
    <link name="base_link">
        <visual>
            <geometry>
                <mesh filename="package://carsim/meshes/base_link.STL" />
            </geometry>
            <origin xyz="-0.13 0 0" rpy="0 0 0" />
            <material name="yellow">
                <color rgba="1.0 1.0 1.0 0.9" />
            </material>
        </visual>
        <collision>
            <geometry>
                <box size="0.28 0.05 0.03" />
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
        </collision>
    </link>

    <joint name="base_link2base_footprint" type="fixed">
        <parent link="base_footprint" />
        <child link="base_link"/>
        <origin xyz="0 0 ${r_wheel}" rpy="0 0 0" />
    </joint>

    <!-- base_inertia -->
    <link name="base_inertia">
        <inertial>
            <origin xyz="0 0 0" />
            <mass value="4" />
            <inertia ixx="0.0264" ixy="0" ixz="0" iyy="0.0294" iyz="0" izz="0.00364" />
        </inertial>
    </link>

    <!-- chassis_inertia_joint -->
    <joint name="chassis_inertia_joint" type="fixed">
        <origin xyz="0 0 0" rpy="0 0 0" />
        <parent link="base_link" />
        <child link="base_inertia" />
    </joint>

<!-- left_steering_hinge -->
    <link name="left_steering_hinge">   
        <visual>
            <geometry>
                <cylinder radius="0.01" length="0.005" />
                <!-- <sphere radius="0.015" /> -->
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0" />
            <material name="yellow">
                <color rgba="1.0 1.0 1.0 0.9" />
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.01" length="0.005" />
                <!-- <sphere radius="0.015" /> -->
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="1.57 0.0 0.0" />
        </collision>
        <inertial>
            <origin xyz="0 0 0" />
            <mass value="0.5" />
            <inertia ixx="1.35E-05" ixy="0" ixz="0" iyy="1.35E-05" iyz="0" izz="2.5E-05" />
        </inertial>
    </link>
    <!-- left_steering_hinge_joint -->
    <joint name="left_steering_hinge_joint" type="revolute">
        <parent link="base_link" />
        <child link="left_steering_hinge" />
        <origin xyz="0.13 0.09 0" />
        <axis xyz="0 0 1" />
        <limit lower="-0.6" upper="0.6" effort="5.0" velocity="1000.0"/>
    </joint>
    <xacro:steering_hinge_transmission name="left_steering_hinge" />

<!-- left_front_wheel -->
    <link name="left_front_wheel">
        <visual>
            <geometry>
                <cylinder radius="${r_wheel}" length="${l_wheel}" />
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0" />
            <material name="yellow">
                <color rgba="1.0 1.0 1.0 0.9" />
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="${r_wheel}" length="${l_wheel}" />
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="1.57 0.0 0.0" />
        </collision>
        <inertial>
            <origin xyz="0 0 0" />
            <mass value="2.0" />
            <inertia ixx="6.64E-04" ixy="0" ixz="0" iyy="6.64E-04" iyz="0" izz="1.02E-03" />
        </inertial>
        <xacro:wheel_friction name="${mu}" />
    </link>

    <joint name="left_front_wheel_joint" type="continuous">
        <parent link="left_steering_hinge" />
        <child link="left_front_wheel" />
        <origin xyz="0 0 0" />
        <axis xyz="0 1 0" />
        <limit effort="10" velocity="1000" />
        <dynamics damping="0.0" friction="${rotation_fiction}"/>
    </joint>
     <xacro:wheel_transmission name="left_front_wheel" />

<!-- right_steering_hinge -->
    <link name="right_steering_hinge">
        <visual>
            <geometry>
                 <cylinder radius="0.01" length="0.005" />
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0" />
            <material name="yellow">
                <color rgba="1.0 1.0 1.0 0.9" />
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.01" length="0.005" />
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="1.57 0.0 0.0" />
        </collision>
        <inertial>
            <origin xyz="0 0 0" />
            <mass value="0.5" />
            <inertia ixx="1.35E-05" ixy="0" ixz="0" iyy="1.35E-05" iyz="0" izz="2.5E-05" />
        </inertial>
    </link>

    <joint name="right_steering_hinge_joint" type="revolute">
        <parent link="base_link" />
        <child link="right_steering_hinge" />
        <origin xyz="0.13 -0.09 0" />
        <axis xyz="0 0 1" />
        <limit lower="-0.6" upper="0.6" effort="5.0" velocity="1000.0"/>
    </joint>
    <xacro:steering_hinge_transmission name="right_steering_hinge" />

<!-- right_front_wheel -->
    <link name="right_front_wheel">
        <visual>
            <geometry>
                <cylinder radius="${r_wheel}" length="${l_wheel}" />
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0" />
            <material name="yellow">
                <color rgba="1.0 1.0 1.0 0.9" />
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="${r_wheel}" length="${l_wheel}" />
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="1.57 0.0 0.0" />
        </collision>
        <inertial>
            <origin xyz="0 0 0" />
            <mass value="2.0" />
            <inertia ixx="6.64E-04" ixy="0" ixz="0" iyy="6.64E-04" iyz="0" izz="1.02E-03" />
        </inertial>
        <xacro:wheel_friction name="${mu}" />
    </link>

    <joint name="right_front_wheel_joint" type="continuous">
        <parent link="right_steering_hinge" />
        <child link="right_front_wheel" />
        <origin xyz="0 0 0" />
        <axis xyz="0 1 0" />
        <limit effort="10" velocity="1000" />
        <dynamics damping="0.0" friction="${rotation_fiction}"/>
    </joint>
    <xacro:wheel_transmission name="right_front_wheel" />

<!-- left_rear_wheel -->
    <link name="left_rear_wheel">
        <visual>
            <geometry>
                <cylinder radius="${r_wheel}" length="${l_wheel}" />
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0" />
            <material name="yellow">
                <color rgba="1.0 1.0 1.0 0.9" />
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="${r_wheel}" length="${l_wheel}" />
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="1.57 0.0 0.0" />
        </collision>
        <inertial>
            <origin xyz="0 0 0" />
            <mass value="2.0" />
            <inertia ixx="6.64E-04" ixy="0" ixz="0" iyy="6.64E-04" iyz="0" izz="1.02E-03" />
        </inertial>
        <xacro:wheel_friction name="${mu}" />

    </link>
    <joint name="left_rear_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="left_rear_wheel" />
        <origin xyz="-0.13 0.09 0" />
        <axis xyz="0 1 0" />
        <limit effort="10" velocity="1000" />
        <dynamics damping="0.0" friction="${rotation_fiction}"/>
    </joint>
    <xacro:wheel_transmission name="left_rear_wheel" />

<!-- right_rear_wheel -->
    <link name="right_rear_wheel">
        <visual>
            <geometry>
                <cylinder radius="${r_wheel}" length="${l_wheel}" />
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0" />
            <material name="yellow">
                <color rgba="1.0 1.0 1.0 0.9" />
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="${r_wheel}" length="${l_wheel}" />
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="1.57 0.0 0.0" />
        </collision>
        <inertial>
            <origin xyz="0 0 0" />
            <mass value="2.0" />
            <inertia ixx="6.64E-04" ixy="0" ixz="0" iyy="6.64E-04" iyz="0" izz="1.02E-03" />
        </inertial>
        <xacro:wheel_friction name="${mu}" />
    </link>
    <joint name="right_rear_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="right_rear_wheel" />
        <origin xyz="-0.13 -0.09 0" />
        <axis xyz="0 1 0" />
        <limit effort="10" velocity="1000" />
        <dynamics damping="0.0" friction="${rotation_fiction}"/>
    </joint>
    <xacro:wheel_transmission name="right_rear_wheel" />
    
    <xacro:include filename="$(find carsim)/urdf/racecar.gazebo" />
</robot>